<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/mainInterface"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/myViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y145"
            android:background="#404147"
            android:orientation="horizontal"
            >

            <!--1-->
            <RelativeLayout
                android:id="@+id/tab_score"
                android:layout_width="0dp"
                android:layout_height="@dimen/y160"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/y10"
                    android:text="成绩"
                    android:textColor="#707073" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/item_score"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y10"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>
            <!--2-->
            <RelativeLayout
                android:id="@+id/tab_rank"
                android:layout_width="0dp"
                android:layout_height="@dimen/y160"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/y10"
                    android:text="榜单"
                    android:textColor="#707073" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/item_rank"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y10"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>

            <!--3-->
            <RelativeLayout
                android:id="@+id/tab_blank"
                android:layout_width="0dp"
                android:layout_height="@dimen/y160"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1">

                <TextView
                android:id="@+id/item_run"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/y10"
                android:text="跑"
                android:textColor="#707073" />

                <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_run"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/y10"
                android:paddingTop="5dp"
                android:src="@drawable/ic_settings" />

            </RelativeLayout>

            <!--4-->
            <RelativeLayout
                android:id="@+id/tab_runship"
                android:layout_width="0dp"
                android:layout_height="@dimen/y160"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_runship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/y10"
                    android:text="跑友圈"
                    android:textColor="#707073" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/item_runship"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y10"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>

            <!--5-->
            <RelativeLayout
                android:id="@+id/tab_mine"
                android:layout_width="0dp"
                android:layout_height="@dimen/y160"
                android:layout_gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_my"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="@dimen/y10"
                    android:text="我的"
                    android:textColor="#707073" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/item_my"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/y10"
                    android:paddingTop="5dp"
                    android:src="@drawable/ic_settings" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/runbackground"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:src="@drawable/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:layout_marginBottom="@dimen/y30"
            android:src="@drawable/ic_settings"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/runbackground_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </FrameLayout>




</FrameLayout>